<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GL_product_info_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    style="@style/grid_view_styles"
    android:columnCount="2" >
	
    <TextView
        android:id="@+id/TV_product_quantity_label"
        style="@style/grid_cell_styles"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_row="2"
        android:text="@string/quantity"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        style="@style/grid_cell_styles"
        android:id="@+id/TV_product_quantity_value"
        android:layout_column="1"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_row="2"
        android:text="quantity" />

    <TextView
        style="@style/grid_cell_styles"
        android:id="@+id/TV_product_name_value"
        android:layout_column="1"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_row="0"
        android:text="name" />

    <TextView
        android:id="@+id/TV_product_category_value"
        style="@style/grid_cell_styles"
        android:layout_column="1"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_row="1"
        android:text="category" />

    <TextView
        android:id="@+id/TV_product_category_label"
        style="@style/grid_cell_styles"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_row="1"
        android:text="@string/category"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TV_product_price_label"
        style="@style/grid_cell_styles"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_row="3"
        android:text="@string/price"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/TV_product_price_value"
        style="@style/grid_cell_styles"
        android:layout_column="1"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_row="3"
        android:text="price" />

    <TextView
        android:id="@+id/TV_product_name_label"
        style="@style/grid_cell_styles"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_row="0"
        android:text="@string/name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</GridLayout>